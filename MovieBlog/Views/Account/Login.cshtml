                <input asp-for="Password" class="login__window-input" type="password" placeholder="Пароль">
                <div class="login__window-input-checkbox">
                    <input asp-for="RememberMe" type="checkbox">
                    <label asp-for="RememberMe">Запомнить меня</label>
                </div>
                <button class="login__window-button" type="submit">Войти</button>
