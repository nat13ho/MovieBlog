@model List<Category>

@{
    Layout = "_AccountLayout";
    ViewData["Title"] = "Добавление роли";
}

@await Html.PartialAsync("_Navbar", Model)
@await Html.PartialAsync("_Sidebar")
<section class="container account__control-wrapper">
    <div class="roles__control">
        <h1>Все жанры</h1>
        <table class="roles__control-table">
            <thead>
            <tr>
                <th>Название жанра</th>
                <th>Удалить</th>
            </tr>
            </thead>
            <tbody>
            @foreach (var category in Model)
            {
                <tr>
                    <td>@category.Name</td>
                    <td>
                        <form asp-controller="Post" asp-action="RemoveCategory" asp-route-id="@category.Id" method="post" class="roles__control-form-delete">
                            <button type="submit">Удалить</button>
                        </form>
                    </td>
                </tr>
            }
            </tbody>
        </table>
        <form asp-controller="Post" asp-action="AddCategory" class="roles__control-form" method="post">
            <h2>Добавление жанра</h2>
            <input name="category" type="text" class="roles__control-input" placeholder="Название жанра">
            <button type="submit">Добавить</button>
        </form>
    </div>
</section>
